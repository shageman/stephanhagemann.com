<script>
  var bgImageArray = ["root/stephan1.jpg", "root/stephan5.jpg", "root/stephan2.jpg", "root/stephan3.jpg", "root/stephan4.jpg"];
  var creditsArray = ["evantravers", null, "evantravers", "evantravers", null];

  base = "/images/",
  secs = 6;

  bgImageArray.forEach(function(img){
      new Image().src = base + img;
      // caches images, avoiding white flash between background replacements
  });

  function backgroundSequence() {
    window.clearTimeout();
    var k = 0;
    for (i = 0; i < bgImageArray.length; i++) {
      setTimeout(function(){
        if (window.innerWidth <= 1266) { return; }

        document.getElementById("sidebar").style.backgroundImage = "url(" + base + bgImageArray[k] + ")";
        document.getElementById("sidebar").style.backgroundRepeat = "no-repeat";
        document.getElementById("sidebar").style.backgroundSize = "cover";
        document.getElementById("sidebar").style.backgroundBlendMode = "normal";

        document.getElementById("image-credits").innerHTML = "";
        if (creditsArray[k]) {
          document.getElementById("image-credits").innerHTML = "Image: <a href='https://www.instagram.com/" + creditsArray[k] + "'>@" + creditsArray[k] + "</a>";
        }

        if ((k + 1) === bgImageArray.length) { setTimeout(function() { backgroundSequence() }, (secs * 1000))} else { k++; }
      }, (secs * 1000) * i)
    }
  }
  backgroundSequence();
</script>