<%
  @layout_params = RailsShims::LayoutParams.new(
    active_section: 'posts',
    container_class: "content-margin-top",
  )
%>

<% if @post.is_a?(Posts::Post) %>
  <%= render partial: 'posts/posts/post', locals: { post: @post } %>
<% elsif @post.is_a?(Posts::MastodonPost) %>
  <%= render partial: 'posts/posts/mastodon_post', locals: { post: @post } %>
<% end %>