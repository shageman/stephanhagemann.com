<%
  @layout_params = RailsShims::LayoutParams.new(
    active_section: 'posts',
    container_class: "content-margin-top",
    description_link: link_to('Ask me anything!', Contact::Config.entrypoint_path('Ask me anything')),
    description: "Rarely.",
    header: "Posts",
    page_class: "dark-theme theme-blue",
    title: "Stephan Hagemann's posts",
  )
%>

<% @posts.each do |post| %>
<div class="blog-list-item">

  <h2><%= link_to(post.header || post.title, post_path(post)) %></h2>

  <div class="grab">
  <%= raw @markdown.render(post.teaser) %>
  </div>
  <p class="by-line"><%= post.date %></p>
</div>
<% end %>