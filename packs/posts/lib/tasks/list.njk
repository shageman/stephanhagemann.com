<link rel="canonical" href="{{startingToot.url}}" />

{% for toot in toots %}
{% set isMine = toot.account.url == "https://ruby.social/@shageman" %}
{% set displayName = toot.account.display_name if toot.account.display_name else toot.account.username %}
<div class="toot {{"toot-mine" if isMine else "toot-other"}}">
  <div class='toot-bubble'>
    <div class='toot-content'>{{toot.content | safe }}</div>
    {%- if isMine -%}
    <div class='toot-images'>
      {%- for media in toot.media_attachments -%}
      {%- if media.type == "image" -%}
      <img src="{{media.preview_url}}">
      {%- endif -%}
      {%- endfor -%}
    </div>
    {%- endif -%}
  </div>
  <div class="arrow-down"></div>
  <div class="toot-metadata">
    {%- if isMine -%}
    <img class="toot-author-icon" src="{{toot.account.avatar}}">
    <div class='toot-author'>
      <a class="author-name" href="{{toot.account.url}}">{{displayName}}</a>
      <a class="author-acct" href="{{toot.account.url}}">{{toot.account.acct}}@ruby.social</a>
    </div>
    <div class='toot-time'><a href="{{toot.url}}">{{toot.created_at | dateTimeDisplay}}</a></div>
    {%- else -%}
    <div class='toot-time'><a href="{{toot.url}}">{{toot.created_at | dateTimeDisplay}}</a></div>
    <div class='toot-author'>
      <a class="author-name" href="{{toot.account.url}}">{{displayName}}</a>
      <a class="author-acct" href="{{toot.account.url}}">{{toot.account.acct}}</a>
    </div>
    <img class="toot-author-icon" src="{{toot.account.avatar}}">
    {%- endif -%}
  </div>
</div>
{% else %}
<div>No toots to display</div>
{% endfor %}

<div class='toot-backlink'>
  <a href="{{startingToot.url}}">Join the conversation on mastodon!</a>
</div>